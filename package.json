{
  "name": "create-t3-turbo",
  "private": true,
  "engines": {
    "node": ">=v18.16.0"
  },
  "scripts": {
    "build": "turbo build",
    "start": "turbo run start --scope=\"@evy/nextjs\"",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "db:push-force": "turbo db:push-force",
    "db:migrate": "turbo db:migrate",
    "db:migrate-deploy": "turbo db:migrate-deploy",
    "db:migrate-create": "turbo db:migrate-create",
    "dev": "turbo dev --parallel",
    "dev:prisma": "turbo dev:prisma",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:local": "dotenv -- npm run lint",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@evy/eslint-config": "*",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@manypkg/cli": "^0.21.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.48.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.3",
    "turbo": "^1.12.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@9.5.1",
  "workspaces": {
    "packages": [
      "apps/nextjs",
      "packages/api",
      "packages/auth",
      "packages/db",
      "packages/config/*",
      "packages/styling",
      "packages/images"
    ],
    "nohoist": [
      "@hookform/resolvers"
    ]
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true
  }
}
